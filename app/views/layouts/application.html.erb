<!DOCTYPE html>
<html>
<head>
  <title>Iread</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

	<nav>
		<ul>
		<% if current_user %>

		<li id="name"><%= "Hi #{current_user.fname}! " %></li>
		<li><%=link_to('Edit Profile', edit_user_path(current_user.id), method: :get) %></li></br>
		<li><%= link_to( 'Sign out', logout_path, method: :delete) %></li></br>
		<li><%= link_to 'Create new Post', new_post_path %></li></br>
        <li><%= link_to 'View all posts', posts_path %></li>                
		<% else %>    
	       
		<%= form_tag('/login', method: :post) do |f| %>
        <li><%= link_to " Sign up", new_user_path %></li>
        <li><%= submit_tag :Login %></li>
        <li><%= password_field_tag(:password,"", placeholder: 'Password') %></li>             
		<li><%= email_field_tag(:email,"", placeholder: 'Email')  %></li>
		
		
		<% end %>
		<% end %>
        </ul>                
	</nav>

<body>
	<main>

		<%= flash[:notice] if flash[:notice] %>
        <%= flash[:alert] if flash[:alert] %>

		<%= yield %>

	</main>
</body>
</html>
